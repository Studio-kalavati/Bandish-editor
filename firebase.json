{
  "hosting": {
    "public": "resources/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/view/*",
        "destination": "/index.html"
    }],
      "redirects": [
          {
          "source": "/sounds/metronome/:metro*",
          "destination": "https://storage.cloud.google.com/swaranotebook_media/sounds/metronome/:metro",
          "type": 200},
           {
          "regex": "/sounds/santoor/(\w+.mp3)",
          "destination": "https://storage.cloud.google.com/swaranotebook_media/sounds/santoor/:1",
          "type": 200},
     	{
          "regex": "/sounds/tanpura/(\w+)",
          "destination": "https://storage.cloud.google.com/swaranotebook_media/sounds/tanpura/:1",
          "type": 301},
	{
          "regex": "/sounds/(.+)",
          "destination": "https://storage.cloud.google.com/swaranotebook_media/sounds/:1",
          "type": 301}
      ]
   }
}
