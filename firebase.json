{
  "hosting": {
    "public": "resources/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
  "headers": [ {
    "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css|mp3)",
    "headers": [ {
      "key": "Access-Control-Allow-Origin",
      "value": "*"
    } ]
  } ],

    "rewrites": [
      {
        "source": "/view/*",
        "destination": "/index.html"
    }],
      "redirects": [
          {
          "source": "/sounds/metronome/:metro*",
          "destination": "https://storage.cloud.google.com/swaranotebook_media/sounds/metronome/:metro",
          "type": 301},
           {
          "source": "/sounds/santoor/:f",
          "destination": "https://storage.cloud.google.com/swaranotebook_media/sounds/santoor/:f",
          "type": 301},
     	{
          "source": "/sounds/tanpura/:f",
          "destination": "https://storage.cloud.google.com/swaranotebook_media/sounds/tanpura/:f",
          "type": 301},
	{
          "regex": "/sounds/:f*",
          "destination": "https://storage.cloud.google.com/swaranotebook_media/sounds/:f",
          "type": 301}
      ]
   }
}
